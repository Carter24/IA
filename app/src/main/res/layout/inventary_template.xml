<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:orientation="vertical">
    <TextView
            android:layout_width="235dp"
            android:layout_height="41dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.06"
            android:layout_marginTop="16dp"/>
    <Button
            android:text="Ver"
            android:layout_width="110dp"
            android:layout_height="56dp"
            android:id="@+id/ver"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/Eliminar" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="235dp"
            android:layout_height="41dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.06"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:layout_width="235dp"
            android:layout_height="41dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.06"
            android:layout_marginTop="108dp"/>

    <Button
            android:text="Actualizar"
            android:layout_width="113dp"
            android:layout_height="56dp"
            android:id="@+id/Actualizar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="52dp"/>
    <Button
            android:text="Eliminar"
            android:layout_width="99dp"
            android:layout_height="54dp"
            android:id="@+id/Eliminar"
            app:layout_constraintStart_toEndOf="@+id/Actualizar"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="52dp"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>